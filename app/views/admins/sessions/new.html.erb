<main class="login">
 <div class="form_container">
  <div class="form_grop">
  <h2>管理者ログイン</h2>
   <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   <%= render 'layouts/flash'%>
	   <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form", placeholder: "メールアドレス"%>
    <%= f.password_field :password, autocomplete: "current-password",class: "form", placeholder: "パスワード" %>
   <% if devise_mapping.rememberable? %>
    <div class="field">
     <%= f.check_box :remember_me %>
     <%= f.label :remember_me, "ログイン情報を保存" %>
    </div>
   <% end %>
   <div class="actions">
    <%= f.submit "ログイン",class:"form_btn"%>
   </div>
  <% end %>
  </div>
 </div>
</main>
