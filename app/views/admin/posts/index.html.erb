<main class="posts">
 <div class="posts_container">
  <div class="posts_main">
    <h3>お題一覧</h3>
      <table>
       <thead>
        <tr>
         <th>ID</th>
         <th>内容</th>
         <th>画像</th>
        </tr>
       </thead>
       <tbody>
        <% @posts.each do |post| %>
        <tr>
         <td><%= post.id %></td>
         <td>
          <%= link_to edit_admin_post_path(post.id) do%>
           <%= post.body %>
          <% end %>
         </td>
         <td><%= attachment_image_tag post, :image ,class: "user_image", fallback: "no_image_title.jpg", size: "30x30"%></td>
        </tr>
       <% end %>
      </tbody>
     </table>
    <%= paginate  @posts %>
  </div>
 </div>
</main>