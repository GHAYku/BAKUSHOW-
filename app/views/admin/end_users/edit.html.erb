<main class="posts">
  <div class="posts_container">
      <div class="posts_main">
        <nav class="post_select">
         <ul>
          <li class="select-btns">設定編集</li>
         </ul>
        </nav>
        <section class="post_index">
          <%= form_with model: @end_user, url: admin_end_user_path(@end_user.id), local:true do |f| %>
            <div class="post_form_image">
              <label>プロフィール画像</label>
              <%= f.attachment_field :image%>
            </div>
            <div class="post_form_body">
              <label>ニックネーム</label>
              <%= f.text_field :name, placeholder: "名前",class:"name_form"%>
            </div>
             <div class="post_form_body">
              <label>プロフィール</label>
              <%= f.text_area :body, placeholder: "自己紹介",class:"post_body_form"%>
            </div>
            <div class="post_form_body">
              <label>メールアドレス</label>
              <%= f.email_field :email, placeholder: "メール"%>
            </div>
            <div class="post_form_body">
             <%= f.label :is_active, "会員ステータス", class: "col-3" %>
            <div>
             <%= f.radio_button :is_active, true%>
             <%= f.label :is_active, "有効", value: true%>
             <%= f.radio_button :is_active, false%>
             <%= f.label :is_active, "退会済", value: false%>
            </div>
            </div>
            <div class="post_form_btn">
             <%= f.submit "編集", class: "form_btn"%>
            </div>
          <% end %>
        </section>
        <a class="scroll"></a>
      </div>
  </div>
</main>
