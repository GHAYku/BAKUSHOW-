<main class="login">
 <div class="form_container">
  <div class="form_grop">
   <h2>アカウント作成</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render 'layouts/flash'%>
    <%= f.text_field :name, autofocus: true,class: "form", placeholder: "ニックネーム" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form", placeholder: "メールアドレス"%>
    <% if @minimum_password_length %>
    <em></em>
    <% end %>
    <%= f.password_field :password, autocomplete: "current-password",class: "form", placeholder: "パスワード(6文字以上)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form", placeholder: "パスワード確認用" %>
    <div class="actions">
     <%= f.submit "作成",class:"form_btn" %>
     <p>※登録済の方は<span><%= link_to " こちら", new_end_user_session_path%></span>からログイン</p>
    </div>
  <% end %>
  </div>
 </div>
</main>