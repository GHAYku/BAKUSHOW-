<main class="posts">
  <div class="posts_container">
    <%= render "public/end_users/current_end_user_menu" %>
      <div class="posts_main">
        <nav class="post_select">
         <ul>
          <li class="select-btns">設定編集</li>
         </ul>
        </nav>

        <section class="post_index">
          <%= form_with model: @end_user, url: public_end_user_path(@end_user.id), local:true do |f| %>
            <div class="post_form_image">
              <label>プロフィール画像</label>
              <%= f.attachment_field :image%>
            </div>
            <div class="post_form_body">
              <label>ニックネーム</label>
              <%= f.text_field :name, placeholder: "名前",class:"name_form"%>
            </div>
             <div class="post_form_body">
              <label>プロフィール</label>
              <%= f.text_area :body, placeholder: "自己紹介",class:"post_body_form"%>
            </div>
            <div class="post_form_body">
              <label>メールアドレス</label>
              <%= f.email_field :email, placeholder: "メール"%>
            </div>
            <div class="post_form_btn">
             <%= f.submit "編集", class: "form_btn"%>
            </div>
            <div class="post_delete">
             <%= link_to "退会", withdraw_public_end_users_path, method: :PATCH, data: { confirm: "本当に退会してもよろしいですか？" },class: "post_show"%>
            </div>
          <% end %>
        </section>
        <a class="scroll"></a>
      </div>
  </div>
</main>
